      "@type":    "IriTemplate",
      "template": "http://localhost/test_default/term/{?term_id}",
      "variableRepresentation": "BasicRepresentation",
      "mapping": [
        {
          "@type":    "IriTemplateMapping",
          "variable": "term_id",
          "property": "hydra:freetextQuery",
          "required": true
